{
    "name": "bendozy/orm",
    "description": "A simple agnostic php ORM",
    "license": "MIT",
    "keywords": [
        "orm", "database", "persistence", "sql", "php"
    ],
    "authors": [
        {
            "name": "Chidozie Ijeomah",
            "email": "chidozie.ijeomah@andela.com"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "vlucas/phpdotenv": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "mockery/mockery": "^0.9.4"
    },
    "autoload": {
        "classmap":[
            "src/"
        ],

        "psr-4": {
            "Bendozy\\ORM\\": "src/",
            "Bendozy\\ORM\\Base\\": "src/Base",
            "Bendozy\\ORM\\Connection\\": "src/Connection",
            "Bendozy\\ORM\\Exceptions\\": "src/Exceptions",
            "Bendozy\\ORM\\Helper\\": "src/Helper"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bendozy\\ORM\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
